<%-include("partials/header.ejs") %>
<div class="container">
    <div class="row g-5">
          <h4 class="mb-3">Edit post</h4>
          <form action="/update/<%=locals.id%>"  method="post">
              <div class="col-12">
                <label for="username" class="form-label">Username</label>
                <div class="input-group has-validation">
                  <span class="input-group-text">@</span>
                  <input type="text" class="form-control" id="username" name="username" placeholder="Username" required="" value="<%=locals.user %>" readonly>
              </div>

              <div class="col-12">
                <label for="address" class="form-label">Post title</label>
                <input type="text" class="form-control" id="title" name="title" placeholder="New post title" required="" spellcheck="false" data-ms-editor="true" value="<%= locals.title%>">
              </div>
            
              <div class="col-12">
                <label for="address" class="form-label">Post content</label>
                <textarea  class="form-control" id="content" name="content" required="" spellcheck="false" data-ms-editor="true" placeholder="New post content"><%= locals.content%></textarea>
              </div>
            <br>
            <button class="w-100 btn btn-primary btn-lg" type="submit">Update post</button>
            <br><br><br>
          </form>
      </div>
      
</div>

<%-include("partials/footer.ejs") %>